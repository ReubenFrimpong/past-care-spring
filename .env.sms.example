# SMS Module Environment Variables
# Copy this file to .env or add these to your application.properties

# =============================================================================
# AFRICA'S TALKING CONFIGURATION
# =============================================================================
# Sign up at: https://account.africastalking.com/auth/register
# Get your credentials from: https://account.africastalking.com/apps/sandbox/settings/key

# Africa's Talking API Key (required for African countries)
africas-talking.api-key=YOUR_AFRICASTALKING_API_KEY

# Africa's Talking Username (usually your app username)
africas-talking.username=YOUR_AFRICASTALKING_USERNAME

# Africa's Talking Sender ID (the name that appears as sender)
africas-talking.sender-id=YOUR_SENDER_ID

# =============================================================================
# TWILIO CONFIGURATION
# =============================================================================
# Sign up at: https://www.twilio.com/try-twilio
# Get your credentials from: https://console.twilio.com/

# Twilio Account SID (required for international SMS)
twilio.account-sid=YOUR_TWILIO_ACCOUNT_SID

# Twilio Auth Token (required for signature verification)
twilio.auth-token=YOUR_TWILIO_AUTH_TOKEN

# Twilio Phone Number (your Twilio number)
twilio.phone-number=+1234567890

# =============================================================================
# PAYSTACK CONFIGURATION
# =============================================================================
# Sign up at: https://paystack.com/signup
# Get your credentials from: https://dashboard.paystack.com/#/settings/developer

# Paystack Secret Key (required for webhook signature verification)
paystack.secret-key=YOUR_PAYSTACK_SECRET_KEY

# Paystack Public Key (for frontend payment initialization)
paystack.public-key=YOUR_PAYSTACK_PUBLIC_KEY

# =============================================================================
# WEBHOOK URLs (Configure these in your service dashboards)
# =============================================================================

# Africa's Talking Delivery Report URL:
# https://your-domain.com/api/webhooks/sms/africas-talking/delivery

# Twilio Status Callback URL:
# https://your-domain.com/api/webhooks/sms/twilio/delivery

# Paystack Webhook URL:
# https://your-domain.com/api/webhooks/paystack/events

# =============================================================================
# SMS SCHEDULER CONFIGURATION (Optional - defaults provided)
# =============================================================================

# Enable/disable scheduled SMS processing (default: true)
sms.scheduler.enabled=true

# Enable/disable SMS retry mechanism (default: true)
sms.retry.enabled=true

# Max retry attempts for failed SMS (default: 3)
sms.retry.max-attempts=3

# Retry interval in minutes (default: 15)
sms.retry.interval-minutes=15

# Enable/disable low balance alerts (default: true)
sms.low-balance-alert.enabled=true

# Default low balance threshold in credits (default: 100)
sms.low-balance-threshold=100

# =============================================================================
# TESTING MODE (Optional)
# =============================================================================

# Set to true to skip webhook signature verification (development only)
webhooks.skip-signature-verification=false

# =============================================================================
# NOTES
# =============================================================================
# 1. Replace all YOUR_* placeholders with actual values
# 2. Keep this file secure - never commit to version control
# 3. Add .env to your .gitignore file
# 4. For production, use environment variables or secrets management
# 5. Test webhooks locally using ngrok or similar tools
